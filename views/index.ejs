
<!-- 1. Stock Summary -->
<div class="row mt-5">
    <!-- Total Produk Card -->
    <div class="col-md-3 mb-4">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <h5 class="card-title">Total Produk</h5>
                <p class="card-text"><%= totalProduk %></p>
            </div>
        </div>
    </div>
    <!-- Total Kategori Card -->
    <div class="col-md-3 mb-4">
        <div class="card bg-info text-white">
            <div class="card-body">
                <h5 class="card-title">Total Kategori</h5>
                <p class="card-text"><%= totalKategori %></p>
            </div>
        </div>
    </div>
    <!-- Stok Alert Card -->
    <div class="col-md-3 mb-4">
        <div class="card bg-warning text-dark">
            <div class="card-body">
                <h5 class="card-title">Stok Alert</h5>
                <p class="card-text"><%= stokAlertCount %> Products</p>
            </div>
        </div>
    </div>
    <!-- Transaksi Bulan Ini Card -->
    <div class="col-md-3 mb-4">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h5 class="card-title">Transaksi Bulan Ini</h5>
                <p class="card-text">50</p>
            </div>
        </div>
    </div>
</div>

<!-- 2. Statistik Transaksi -->
<div class="card mb-4">
    <div class="card-header">
        Statistik Transaksi
    </div>
    <div class="card-body">
        <div style="height:200px;">
            <canvas id="myChart"></canvas>
        </div>
    </div>
</div>

<!-- 3. Stock Monitoring Section -->
<div class="row">
    
    <!-- Stock Level Card -->
    <div class="col-md-6 mb-4">
      <div class="card">
        <div class="card-header">
          Stok Produk: Wireless Mouse
        </div>
        <div class="card-body">
          <p>Stock Level: 30</p>
          <div class="progress">
            <div class="progress-bar" role="progressbar" style="width: 30%" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Produk dengan Stok Rendah Card -->
    <div class="col-md-6 mb-4">
      
      <div class="card">
        <div class="card-header">
          Produk dengan Stok Rendah
        </div>
        <ul class="list-group list-group-flush">
          <% stokAlert.forEach(p => { %>
            <li class="list-group-item">
              <%= p.name %> â€“ <%= p.stock %> remaining
            </li>
          <% }) %>
        </ul>
      </div>
    </div>
</div>

<!-- 4. Newest Transaction -->
<div class="card mb-5">
    <div class="card-header">
      Transaksi Terbaru
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover text-white">
          <thead class="table-primary text-dark">
            <tr>
              <th>#</th>
              <th>Produk</th>
              <th>Kategori</th>
              <th>Jumlah</th>
              <th>Tanggal</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>1</td>
              <td>Headset XYZ</td>
              <td>Elektronik</td>
              <td>2</td>
              <td>2025-04-24</td>
              <td><span class="badge bg-success">Selesai</span></td>
            </tr>
            <tr>
              <td>2</td>
              <td>Mouse ABC</td>
              <td>Peripherals</td>
              <td>1</td>
              <td>2025-04-23</td>
              <td><span class="badge bg-warning text-dark">Menunggu</span></td>
            </tr>
            <tr>
              <td>3</td>
              <td>Keyboard RGB</td>
              <td>Peripherals</td>
              <td>1</td>
              <td>2025-04-22</td>
              <td><span class="badge bg-danger">Batal</span></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('myChart').getContext('2d');
      
        const myChart = new Chart(ctx, {
          type: 'bar', // or 'line', 'pie', etc.
          data: {
            labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May'],
            datasets: [{
              label: 'Transaksi',
              data: [12, 19, 3, 5, 2],
              backgroundColor: 'rgba(54, 162, 235, 0.6)',
              borderColor: 'rgba(54, 162, 235, 1)',
              borderWidth: 1
            }]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false, // allow height override
            scales: {
              y: {
                beginAtZero: true
              }
            }
          }
        });
</script>  