<!-- Judul Halaman -->
<h3 class="fw-bold mt-4"><%= isEdit ? "Edit Kategori" : "Tambah Kategori" %></h3>

<!-- Form Tambah/Edit Kategori -->
<form action="<%= isEdit ? '/kategori' + kategori.id : '/kategori' %>" method="POST">
  <div class="mb-3">
    <label for="namaKategori" class="form-label">Nama Kategori</label>
    <input 
      type="text" 
      class="form-control" 
      id="name" 
      name="name" 
      placeholder="Masukkan nama kategori" 
      value="<%= isEdit ? kategori.name : '' %>" 
      required>
  </div>

  <button type="submit" class="btn btn-primary">
    <%= isEdit ? "Update Kategori" : "Tambah Kategori" %>
  </button>
  <a href="/kategori" class="btn btn-secondary ms-2">Batal</a>
</form>
